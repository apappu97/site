<head>
<%= stylesheet_link_tag    "userStyles", :media => "all" %>
</head>

<h3>Members 2013-14</h3>

<table class="table table-striped table-bordered table-condensed">
  <% @users.each_slice(4) do |users_row| %>
    <tr>
      <% users_row.each do |u| %>
        <td class="user circular">
          <a href="#">
            <%= u.get_picture %>
          </a>
          <span id="htext">
            <%= u.full_name %>
          </span>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>

<table class="table table-striped">
  <% @users.each do |u| %>
    <tr>
    <td class="small circular">
      <%= u.get_picture %>
    </td>
    <td class="large">
      <p>Name: <strong>
      <% if is_logged_in(session) %>
        <%= link_to u.full_name, :action => "edit", :id => u.id %>
      <% else %>
        <%= u.full_name %>
      <% end %>
      </strong>
      </p>
      <p>Year: <strong><%= u.year %></strong></p>
      <p>Bio: <strong><%= u.bio %></strong></p>
    </td>
  </tr>
  <% end %>
</table>

