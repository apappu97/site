<head>
<%= stylesheet_link_tag    "userStyles", :media => "all" %>
</head>

<h3>Members 2013-14</h3>
<script src="angular.min.js"></script>

<div ng-app>
  <label>Name:</label>
  <input type="text" ng-model="yourName" placeholder="Enter a name here">
  <hr>
  <h1>Hello {{yourName}}!</h1>
</div>
<table class="table">
  <% @users.each_slice(4) do |users_row| %>
    <tr>
      <% users_row.each do |u| %>
        <td class="user circular">
          <a href="#">
            <div class="image">
              <%= u.get_picture %>
              <h2 id="htext">
                <span>
                <%= u.full_name %>
                </span>
              </h2>
            </div>
          </a>
        </td>
      <% end %>
    </tr>
  <% end %>
</table>
